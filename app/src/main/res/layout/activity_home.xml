<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/user_profile_imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/robot4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/userName_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/userEmail_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user email"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/userPhone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user phone"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/userGender_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user gender"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/userCity_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user city"
            android:textSize="24sp"
            android:drawableStart="@drawable/ic_add_location_black_24dp"
            android:paddingStart="5dp"
            android:drawablePadding="10dp"/>


    </LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:drawableStart="@drawable/ic_do_not_disturb_alt_black_24dp"/>

</RelativeLayout>